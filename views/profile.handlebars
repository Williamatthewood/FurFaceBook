<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-sm-12 col-md-5 card">
    <h3 class="card-header mt-3">New Post:</h3>

    <form action"/api/post" method="post" class="form new-post-form card-body" enctype="multipart/form-data">
      <div class="p-2 flex">
        <div class="form-group">
          <label for="post-title">Post Title:</label>
          <input class="form-input" type="text" id="post-title" name="post-name" />
        </div>
        <div class="form-group">
          <label class="my-3" for="post-content">Write your post:</label>
          <input class="form-textarea" type="text" id="post-content" name="post-content" />
        </div>
        <div class="form-group">
          <label class="my-3" for="post-image">Upload an image (jpeg,jpg,png,gif):</label>
          <input class="m" type="file" name='image' id="post-image">
        </div>
        <button type="submit" class="btn btn-primary justify-flex-end">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-sm-12 col-md-5 post-list container">
    <h3>My Posts:</h3>

    {{#each posts as |post|}}
    <div class="row m-3 card justify-space-between">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4 mt-1">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>